<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingLeft="8pt"
        android:layout_centerInParent="true"
        android:background="@color/off_white"
        >




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingLeft="8pt"
            android:paddingBottom="10pt"
            android:layout_marginBottom="8pt"
            android:layout_centerInParent="true"
            android:background="#E0EDEE"
            >

        <TextView
            android:paddingLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:id="@+id/first_name_profile"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:textSize="11pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last name"
            android:id="@+id/last_name_profile"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="11pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="972"
            android:id="@+id/phone_number"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="11pt"
            />
</LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/roles_linear"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:background="#E0EDEE"
            >
            <TextView
                android:id="@+id/txtDate"

                android:textColor="@color/sinch_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:paddingBottom="1dp"
                android:textSize="20sp"
                android:text="@string/roles"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignBottom="@+id/txtSender"/>

        </LinearLayout>
        <View android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#aaaaaa"
            android:paddingBottom="2px"
            android:paddingTop="2px"/>


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departments_linear"
            android:paddingTop="3dp"
            android:background="#E0EDEE"
            android:layout_marginTop="8pt"
            >
            <TextView

                android:textColor="@color/sinch_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:paddingBottom="1dp"
                android:textSize="20sp"
                android:text="@string/departments"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignBottom="@+id/txtSender"/>

        </LinearLayout>





    </LinearLayout>

</ScrollView>
</RelativeLayout>