<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
        android:id="@+id/relativeLayout2">
        <TextView
                android:id="@+id/txtSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text=""
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:paddingBottom="6dp"
                android:textColor="@android:color/black" android:textStyle="bold"/>

        <TextView
                android:id="@+id/txtDate"
                android:layout_alignParentLeft="true"
                android:textColor="@color/sinch_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingBottom="6dp"
                android:textSize="12sp"
                android:text=""
                android:layout_alignBottom="@+id/txtSender"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSender"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:background="@color/blue_message"
            android:id="@+id/relativeLayout3">

            <TextView
                android:id="@+id/SenderName_right"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:textSize="14sp"
                android:text="Revital"
                />
            <TextView
                    android:id="@+id/Sendertxt_right"
                    android:paddingRight="12dp"
                    android:paddingTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:text="Hello, how are you?"
                    />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/date"
            android:layout_below="@+id/relativeLayout3"
            android:layout_toRightOf="@+id/txtDate"
            android:layout_toEndOf="@+id/txtDate" />
    </RelativeLayout>

</RelativeLayout>